{{ form_start(form, {'attr': {'class': 'form-body'}}) }}

<div class="form-group">
    {% for field in form %}
        {% if field.vars.name == 'roles' %}
            <div class="form-group">
                <label class="form-label">Roles</label>
                <div class="role-options">
                    {% for role, label in { 'ROLE_MANAGER': 'Manager', 'ROLE_ADMIN': 'Admin', 'ROLE_EMPLOYEE': 'Employee' } %}
                        <div class="role-option">
                            <input type="radio"
                                   id="role_{{ loop.index }}"
                                   name="roles"
                                   value="{{ role }}"
                                   class="form-input-radio"
                                   {% if role in field.vars.value %}checked{% endif %}>
                            <label for="role_{{ loop.index }}" class="form-label-radio">{{ label }}</label>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% elseif field.vars.name == '_token' %}
            {{ form_widget(field) }} {# Render the CSRF token as a hidden field #}
        {% else %}
            <div class="form-group">
                {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(field, {'attr': {'class': 'form-input'}}) }}
                {{ form_errors(field, {'attr': {'class': 'text-danger'}}) }}
            </div>
        {% endif %}
    {% endfor %}
</div>

<div class="form-actions">
    <button type="submit" class="button-52">{{ button_label|default('Save') }}</button>
</div>













<style>
    .form-body {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    .form-label {
        font-weight: 600;
        margin-bottom: 8px;
        color: #333;
    }

    .form-input {
        width: 100%;
        padding: 14px 18px;
        font-size: 1rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        transition: border-color 0.3s, box-shadow 0.3s;
        color: #555;
        background: #f9f9f9;
    }

    .form-input:focus {
        border-color: #007bff;
        outline: none;
        background-color: #fff;
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.4);
    }

    .form-actions {
        text-align: center;
        margin-top: 30px;
    }

    .button-52 {
        font-size: 16px;
        font-weight: 200;
        letter-spacing: 1px;
        padding: 13px 20px;
        outline: 0;
        border: 1px solid black;
        cursor: pointer;
        position: relative;
        background-color: rgba(0, 0, 0, 0);
        user-select: none;
        -webkit-user-select: none;
        touch-action: manipulation;
        width: 100%;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .button-52:after {
        content: "";
        background-color: #ffe54c;
        width: 100%;
        z-index: -1;
        position: absolute;
        height: 100%;
        top: 7px;
        left: 7px;
        transition: 0.2s;
    }

    .button-52:hover:after {
        top: 0px;
        left: 0px;
    }

    .button-52:hover {
        transform: translateY(-3px);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
</style>
