{% extends 'base.html.twig' %}

{% block title %}User Details{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4 text-primary font-weight-bold">User Details</h1>

        <!-- Card with Animated Entry and Background Color -->
        <div class="card shadow-lg border-0 rounded-4 bg-light animated fadeInUp">
            <div class="card-body">
                <h3 class="card-title text-center mb-4 text-secondary">User Information</h3>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr class="bg-primary text-white">
                        <th scope="col">Field</th>
                        <th scope="col">Value</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th scope="row" class="table-secondary">ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="table-secondary">Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="table-secondary">Roles</th>
                        <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="table-secondary">Password</th>
                        <td><span class="text-muted">Hidden for security</span></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Actions Section with Colorful Buttons -->
        <div class="d-flex justify-content-between mt-4">
            <a href="{{ path('app_user_index') }}" class="btn btn-lg btn-outline-primary px-4 py-2 rounded-pill shadow-sm">Back to List</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-lg btn-warning px-4 py-2 rounded-pill shadow-sm">Edit</a>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
    <style>

    </style>
{% endblock %}
