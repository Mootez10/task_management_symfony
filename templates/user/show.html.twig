{% extends 'admin/index.html.twig' %}

{% block body %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}

  {% block nav %}
      {{ parent() }}
  {% endblock %}



{% block contentBody %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">User Details</h1>

        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                    <tr>
                        <th scope="row" class="table-secondary">ID</th>
                        <td>{{ user.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="table-secondary">Email</th>
                        <td>{{ user.email }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="table-secondary">Roles</th>
                        <td>{{ user.roles ? user.roles|join(', ') : '' }}</td>
                    </tr>
                    <tr>
                        <th scope="row" class="table-secondary">Password</th>
                        <td><span class="text-muted">Hidden for security</span></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="d-flex justify-content-between">
            <a href="{{ path('app_user_index') }}" class="btn btn-secondary">Back to List</a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning">Edit</a>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
{% endblock %}
