{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">User Management</h1>

        <div class="mb-3">
            <a href="{{ path('app_user_new') }}" class="btn btn-primary">Create New User</a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Email</th>
                    <th scope="col">Roles</th>
                    <th scope="col">Password</th>
                    <th scope="col" class="text-center">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {{ user.roles is iterable ? user.roles|join(', ') : 'No roles assigned' }}

                        </td>
                        <td>
                            <span class="text-muted">Hidden for security</span>
                        </td>
                        <td class="text-center">
                            <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-info btn-sm me-2">Show</a>
                            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                            <form action="{{ path('app_user_delete', {'id': user.id}) }}" method="post" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
